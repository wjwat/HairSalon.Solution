@{
  Layout = "_Base";
}
@using System.Collections.Generic;

@model HairSalon.Models.Client

<h4>Add a new client</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId", ViewBag.StylistId, null, ViewBag.Attr)
  @if (ViewBag.Selected != 0)
  {
    // Jesus Christ why can't I do something like this with an HTML helper?
    <input type="hidden" name="StylistId" value="@ViewBag.Selected.ToString()" />
  }

  @await Html.PartialAsync("Buttons/ClientAddClient")
}
