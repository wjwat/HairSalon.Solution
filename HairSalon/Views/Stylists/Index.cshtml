@{
  Layout = "_Base";
}

@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Stylist s in Model)
  {
    <li>@Html.ActionLink($"{s.Name}", "Details", new {id = s.StylistId })</li>
  }
  </ul>

  @await Html.PartialAsync("Buttons/ClientAddClient")
}
<br />
@await Html.PartialAsync("Buttons/StylistAddStylist")
