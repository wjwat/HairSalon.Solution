@{
  Layout = "_Base";
}
@using HairSalon.Models;
@model HairSalon.Models.Stylist

<fieldset>
  <legend>@Model.Name</legend>

  @await Html.PartialAsync("Tables/StylistDetails")

  @if (ViewBag.clients.Count != 0)
  {
    @await Html.PartialAsync("Tables/Clients", (List<HairSalon.Models.Client>)ViewBag.clients)
  }

  @await Html.PartialAsync("Buttons/StylistAddClient")
  @await Html.PartialAsync("Buttons/StylistDeleteStylist")
</fieldset>
