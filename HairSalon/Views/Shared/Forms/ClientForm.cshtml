@using System.Collections.Generic;
@model HairSalon.Models.Client

@Html.LabelFor(model => model.FirstName)
@Html.TextBoxFor(model => model.FirstName)
@Html.ValidationMessageFor(model => model.FirstName)
@Html.LabelFor(model => model.LastName)
@Html.TextBoxFor(model => model.LastName)
@Html.ValidationMessageFor(model => model.LastName)
@Html.LabelFor(model => model.Stylist)
@if (ViewBag.Selected != null)
{
  @Html.DropDownList("StylistId", ViewBag.StylistId, null, ViewBag.Attr)
  @Html.Hidden("StylistId", (object)@ViewBag.Selected.ToString())
}
else
{
  @Html.DropDownList("StylistId")
}
